<div class='App'>
  <div class="Twitter_Header">
    <h1>Twitter Logo</h1>
    <div>
      <button>Login</button>
      <button>Sign Up</button>
    </div>
  </div>
  <div class='Twitter_Main'>
    <div class='Twitter_Feed'>  
      <h3>Recent Public Tweets<h3>
      <h4>What everyone on Twitter is talking about!<h4>
      <% if @tweets %>
        <%= 
          render :partial => "tweets/tweet",
          :collection => @tweets || "There are no tweets available at this time"
        %>
      <% end %>
      
    </div>

    <div class="Sidebar">
      <h3 class="something">This is the sidebar</h3>
      <button>Join</button>
      <p>Already Using Twitter from your phone? <a href='#'>Click Here</a></p>
      <label for="lang">Select Language...</label>
      <select id="lang">
        <option value="English">English</option>
      </select>

      <div class='IDK_WHAT_THIS_LIST_IS'>
        <% if @tweets %>
        <%# Filter out all duplicates (meaning if people tweeted twice recently) %>
          <% userSet = @tweets.uniq{|e| [e.user]}%>
          <%= 
            render :partial => "tweets/user", 
            :collection => userSet || "There are no tweets available at this time"
          %>
        <% end %>
          
      
      </div>

    </div>
  </div>
  
  
</div>